FROM ubuntu:24.04

# Minimal dev image for reproducible builds (CMake, Ninja, musl toolchain)
RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
  build-essential \
  cmake \
  ninja-build \
  clang \
  gcc-multilib \
  musl-tools \
  pkg-config \
  libssl-dev \
  ca-certificates \
  curl \
  git \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /work

CMD ["/bin/bash"]
